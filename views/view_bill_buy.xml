<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sonderp_billbuy_form_view" model="ir.ui.view">
            <field name="name">sonderp.facturacioncompras.form</field>
            <field name="model">sonderp.facturacioncompras</field>
            <field name="arch" type="xml">
                <form string="Facturación de compra">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <label for="billc_proveedor_name"/>
                                <field name="billc_proveedor_name"/>
                            </h1>
                            <h3>
                                <label for="billc_id"/>
                                <field name="billc_id"/>
                            </h3>
                        </div>
                        <div class="oe_right">
                            <h2>
                                <label for="billc_compra_orden"/>
                                <field name="billc_compra_orden"/>
                            </h2>
                        </div>
                        <group>
                            <group>
                                <field name="billc_proveedor"/>
                                <field name="billc_fecha"/>
                                <field name="billc_cuota"/>
                            </group>
                            <group>
                                <field name="billc_total"/>
                                <field name="billc_medio_de_pago"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sonderp_billbuy_tree_view" model="ir.ui.view">
            <field name="name">sonderp.facturacioncompras.tree</field>
            <field name="model">sonderp.facturacioncompras</field>
            <field name="arch" type="xml">
                <tree string="Facturación de compra">
                    <field name="billc_id"/>
                    <field name="billc_proveedor_name"/>
                    <field name="billc_fecha"/>
                    <field name="billc_cuota"/>
                    <field name="billc_total"/>
                    <field name="billc_medio_de_pago"/>
                </tree>
            </field>
        </record>

        <record id="sonderp_billbuy_calendar_view" model="ir.ui.view">
            <field name="name">sonderp.facturacioncompras.calendar</field>
            <field name="model">sonderp.facturacioncompras</field>
            <field name="arch" type="xml">
                <calendar>
                </calendar>
            </field>
        </record>

        <record id="sonderp_billbuy_search_view" model="ir.ui.view">
            <field name="name">sonderp.facturacioncompras.search</field>
            <field name="model">sonderp.facturacioncompras</field>
            <field name="arch" type="xml">
                <search string="Facturación de compra">
<!--                    <group expand="1" string="Group By">
                        <filter string="Example Field" name="example_field" domain="[]"
                                context="{'group_by':'example_field'}"/>
                    </group>-->
                </search>
            </field>
        </record>

        <record id="sonderp.billbuy_act_window" model="ir.actions.act_window">
            <field name="name">Facturación de compra</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sonderp.facturacioncompras</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    No existen Facturas de Compras
                </p>
            </field>
        </record>

        <menuitem name="Facturación Compra"
                  id="sonderp_billbuy_menu"
                  parent="facturacion_menu"
                  action="sonderp.billbuy_act_window"/>

    </data>
</odoo>