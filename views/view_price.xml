<odoo>
  <data>

    <record model="ir.ui.view" id="price_form_view">
        <field name="name">precios.form</field>
        <field name="model">sonderp.precios</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="precios_ganancia"/>
                            <field name="precios_promocion"/>
                            <field name="precios_ofertas"/>
                            <field name="precios_fecha"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="price_kanban_view" model="ir.ui.view">
        <field name="name">precios.kanban</field>
        <field name="model">sonderp.precios</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="precios_ganancia"/>
                <field name="precios_promocion"/>
                <field name="precios_ofertas"/>
                <field name="precios_fecha"/>
    <!--                    <field name="location_dest_id"/>-->
    <!--                    <field name="date"/>-->
    <!--                    <field name="activity_state"/>-->
    <!--                    <progressbar field="activity_state" colors='{"planned": "success", "today": "warning", "overdue": "danger"}'/>-->
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_details o_kanban_card_content">
                                    <strong class="o_kanban_record_title">
                                        <field name="precios_ganancia"/></strong>
                                    <div class="o_kanban_tags_section"/>
                                    <ul>
                                        <li>Fecha: <field name="precios_fecha"/></li>
                                        <li> Promocion: <field name="precios_promocion"/></li>
                                    </ul>
                        </div>
<!--                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">-->
