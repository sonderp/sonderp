<!--                                <div class="o_kanban_record_headings">-->
<!--                                    <strong class="o_kanban_record_title"><span><t t-esc="record.stock_producto.value"/></span></strong>-->
<!--                                </div>-->
<!--                                <strong>-->
<!--                                        <field name="stock_state" widget="label_selection" options="{'classes': {'a4': 'default', 'a3': 'success', 'a2': 'warning', 'a1': 'danger'}}"/>-->
<!--                                </strong>-->
<!--                            </div>-->
<!--                            <div class="o_kanban_record_bottom">-->
<!--                                <div class="oe_kanban_bottom_left">-->
<!--                                    <t t-esc="record.stock_grupo.value"/>-->
<!--                                </div>-->
<!--&lt;!&ndash;                                <div class="oe_kanban_bottom_right">&ndash;&gt;-->
<!--&lt;!&ndash;                                    <t t-esc="record.cantidad.value"/>&ndash;&gt;-->
<!--&lt;!&ndash;                                </div>&ndash;&gt;-->
<!--                            </div>-->
<!--                        </div>-->
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record model="ir.actions.act_window" id="price_list_action">
        <field name="name">Precios</field>
        <field name="res_model">sonderp.precios</field>
        <field name="view_mode">kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Agrega precio a un producto
            </p>
        </field>
    </record>

    <menuitem id="price_menu" name="Precios" parent="ventas_menu" action="price_list_action"/>

  </data>
</odoo>