<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="compra_form_view" model="ir.ui.view">
            <field name="name">sonderp.compra.form</field>
            <field name="model">sonderp.compra</field>
            <field name="arch" type="xml">
                <form string="Ordenes de Compra">
                    <sheet>
                        <div>
                            <h1>
                                <label for="compra_id"/>
                                <field name="compra_id" class="oe_title"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="compra_cantidad"/>
                                <field name="compra_cuotas"/>
                                <field name="compra_date" />
                            </group>
                            <group>
                                <field name="compra_cuotas_pagadas"/>
                                <field name="compra_total"/>
                            </group>
                            <group>
                                <field name="compra_costo_cuotas"/>
                                <field name="compra_state"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Proveedores">
                                <field name="compra_proveedores_name"  widget="many2many">
                                    <tree>
                                        <field name="proveedor_name"/>
                                        <field name="proveedor_nit"/>
                                        <field name="proveedor_address"/>
                                        <field name="proveedor_city"/>
                                        <field name="proveedor_type"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="En vitrina">
                                <field name="compra_stock_enable"  widget="many2many">
                                    <tree>
                                        <field name="stock_producto"/>
                                        <field name="stock_grupo"/>
                                        <field name="stock_date"/>
                                        <field name="stock_cantidad_total"/>
                                        <field name="stock_cantidad_enable"/>
                                        <field name="stock_cantidad_disable"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <footer>
                            <field name="compra_state"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="compra_tree_view" model="ir.ui.view">
            <field name="name">sonderp.compra.tree</field>
            <field name="model">sonderp.compra</field>
            <field name="arch" type="xml">
                <tree string="Ordenes de Compra">
                    <field name="compra_cuotas_pagadas"/>
                    <field name="compra_cuotas"/>
                    <field name="compra_cantidad"/>
                    <field name="compra_costo"/>
                    <field name="compra_date"/>
                </tree>
            </field>
        </record>

        <record id="view_buy_calendar" model="ir.ui.view">
            <field name="name">sonderp.buy.calendar</field>
            <field name="model">sonderp.compra</field>
            <field eval="2" name="priority"/>
            <field name="arch" type="xml">
                <calendar>
                </calendar>
            </field>
        </record>

        <record id="compra_search_view" model="ir.ui.view">
            <field name="name">sonderp.compra.search</field>
            <field name="model">sonderp.compra</field>
            <field name="arch" type="xml">
                <search string="compra_cantidad">
                    <group expand="1" string="Group By">
<!--                        <filter string="Example Field" name="example_field" domain="[]"-->
<!--                                context="{'group_by':'example_field'}"/>-->
                    </group>
                </search>
            </field>
        </record>

        <record id="sonderp.compra_act_window" model="ir.actions.act_window">
            <field name="name">Orden de Compra</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sonderp.compra</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Ordenes de Compra
                </p>
            </field>
        </record>

        <menuitem name="Ordenes de compra"
                  id="sonderp_compra_menu"
                  parent="compras_menu"
                  action="sonderp.compra_act_window"/>
    </data>
</odoo>