<odoo>
  <data>

    <record model="ir.ui.view" id="stock_form_view">
        <field name="name">stock.form</field>
        <field name="model">sonderp.stock</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="stock_producto" string="Producto"/>
                        </group>
                        <group>
                            <field name="stock_date"/>
                        </group>
                        <field name="stock_note"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="stock_tree_view">
        <field name="name">stock.tree</field>
        <field name="model">sonderp.stock</field>
        <field name="arch" type="xml">
            <tree string="Stock" default_order='stock_producto' delete="true">
                <field name="stock_producto" string="Producto"/>
                <field name="stock_grupo" string="Categoría"/>
                <field name="stock_state" string="Estado"/>
            </tree>
        </field>
    </record>

    <record id="stock_kanban_view" model="ir.ui.view">
        <field name="name">stock.kanban</field>
        <field name="model">sonderp.stock</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" default_order='stock_producto desc'>
                <field name="stock_producto" string="Producto"/>
                <field name="stock_grupo" string="Categoría"/>
                <field name="stock_state" string="Estado"/>
    <!--                    <field name="location_dest_id"/>-->
    <!--                    <field name="date"/>-->
    <!--                    <field name="activity_state"/>-->
    <!--                    <progressbar field="activity_state" colors='{"planned": "success", "today": "warning", "overdue": "danger"}'/>-->
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <div class="o_kanban_record_top mb8">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title"><span><t t-esc="record.stock_producto.value"/></span></strong>
                                </div>
                                <strong>
                                        <field name="stock_state" widget="label_selection" options="{'classes': {'a4': 'default', 'a3': 'success', 'a2': 'warning', 'a1': 'danger'}}"/>
                                </strong>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <t t-esc="record.stock_grupo.value"/>
                                </div>
<!--                                <div class="oe_kanban_bottom_right">-->
<!--                                    <t t-esc="record.cantidad.value"/>-->
<!--                                </div>-->
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record model="ir.actions.act_window" id="stock_list_action">
        <field name="name">Stock</field>
        <field name="res_model">sonderp.stock</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Agrega un Producto
            </p>
        </field>
    </record>
    <menuitem id="stock_menu" name="Stock" parent="inventario_menu" action="stock_list_action"/>

  </data>
</odoo>